{% extends "layout.njk" %}

{% block content %}
    <div class="content">

        <!-- banner -->
        <div class="banner">
            <div class="banner__img">
                <img src="/assets/chef.png" alt="chef">
            </div>
            <div class="banner__text">
                <h1>As melhores receitas</h1>
                <h3>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
                </h3>
            </div>
        </div>
        <!-- Arrumar o texto H1 colado nos cards -->
        <!--  Mais acessadas  -->

        <h1 class="main_content">Mais acessadas</h1>
        <!-- cards -->

        <section class="cards">
            <!-- 1 -->
            <div class="card">
                <div class="card__img"><img src="/assets/burger.png" alt=""></div>
                <div class="card__info">
                    <h1>Triplo bacon burger</h1>
                    <h3>por Jorge Relato</h3>
                </div>
            </div>
            <!-- 2 -->
            <div class="card">
                <div class="card__img"><img src="/assets/pizza.png" alt=""></div>
                <div class="card__info">
                    <h1>Pizza 4 estações</h1>
                    <h3>por Fabiana Melo</h3>
                </div>
            </div>
            <!-- 3 -->
            <div class="card">
                <div class="card__img"><img src="/assets/espaguete.png" alt=""></div>
                <div class="card__info">
                    <h1>Espaguete ao alho</h1>
                    <h3>por Júlia Kinoto</h3>
                </div>
            </div>
            <!-- 4 -->
            <div class="card">
                <div class="card__img"><img src="/assets/lasanha.png" alt=""></div>
                <div class="card__info">
                    <h1>Lasanha mac n’ cheese</h1>
                    <h3>por Juliano Vieira</h3>
                </div>
            </div>
            <!-- 5 -->
            <div class="card">
                <div class="card__img"><img src="/assets/doce.png" alt=""></div>
                <div class="card__info">
                    <h1>Docinhos pão-do-céu</h1>
                    <h3>por Jorge Relato</h3>
                </div>
            </div>
            <!-- 6 -->
            <div class="card">
                <div class="card__img"><img src="/assets/asinhas.png" alt=""></div>
                <div class="card__info">
                    <h1>Asinhas de frango ao barbecue</h1>
                    <h3>por Vania Steroski</h3>
                </div>
            </div>
        </section>

        <!-- Modal -->
        <div class="modal-overlay">
            <div class="modal">
                <div id="modal-content">

                </div>
                <div class="close-modal">
                    Fechar
                </div>
            </div>
        </div>

    </div>
{% endblock %}
